<head>
<title>Chat Room</title>
<link type="text/css" rel="stylesheet" href="/stylesheets/style.css" />
<script src="https://code.jquery.com/jquery-1.11.1.js"></script>
<script src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.1/socket.io.js'></script>
<script>

     $(function () {
     var socket = io('192.168.1.106:5000');
      $('form').submit(function () {
        socket.emit('chat message', myParam+":"+$('#username').val()+$('#m').val());
        $('#m').val('');
        return false;
      });
      socket.on('chat message', function (msg) {
        $('#messages').append($('<li>').text(msg));
      });
    });
</script>
</head>
 
<div id="wrapper">
    <div id="menu">
        <p class="welcome">Welcome,{{username}} <b></b></p>
        <p class="logout"><a id="exit" href="#">Exit Chat</a></p>
        <div style="clear:both"></div>
    </div>
     
    <ul id="messages">
     
    <form action="https://localhost:5000/" method="get">
        <input type="hidden" name="username" id="username" value="{{username}}">
        <input name="usermsg" type="text" id="m" size="63" autocomplete="off"/>
        <input name="submitmsg" type="submit"  id="submitmsg" value="Send" />
    </form>
</div>
